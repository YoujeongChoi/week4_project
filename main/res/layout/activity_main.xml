<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/start_img"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:src="@drawable/images"
        app:layout_constraintTop_toBottomOf="@id/start_top_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/start_game_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="두더지 잡기 게임"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_img"
        />

    <TextView
        android:id="@+id/start_hi_tv"
        android:layout_width="130dp"
        android:layout_height="19dp"
        android:layout_marginTop="464dp"
        android:text="님 안녕하세요!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start_user_name"
        android:layout_width="46dp"
        android:layout_height="20dp"
        android:layout_marginTop="464dp"
        android:text="최유정"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.356"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start_info_tv"
        android:layout_width="186dp"
        android:layout_height="16dp"
        android:layout_marginTop="496dp"
        android:text="시작버튼을 눌러 시작해주세요!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/start_top_icon"
        android:layout_width="66dp"
        android:layout_height="49dp"
        android:src="@drawable/icon_mole_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/start_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/start_how_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게임방법" />

        <Button
            android:id="@+id/start_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:layout_marginStart="30dp"/>

        <Button
            android:id="@+id/start_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게임 시작"

            android:layout_marginStart="30dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>