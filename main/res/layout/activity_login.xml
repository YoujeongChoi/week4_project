<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        android:src="@drawable/images" />

    <ImageView
        android:id="@+id/login_top_icon"
        android:layout_width="66dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_mole_2" />

    <EditText
        android:id="@+id/login_pw_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Password 입력"
        app:layout_constraintTop_toBottomOf="@id/login_id_et"
        app:layout_constraintStart_toStartOf="@id/login_name_et"
        android:layout_marginTop="30dp"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/login_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="이름 입력"
        app:layout_constraintStart_toEndOf="@id/login_name_tv"
        app:layout_constraintTop_toBottomOf="@id/login_img"
        android:layout_marginTop="38dp"
        android:layout_marginStart="70dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/login_pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintStart_toStartOf="@id/login_id_tv"
        app:layout_constraintTop_toBottomOf="@id/login_id_tv"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/login_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_img"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/login_id_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ID 입력"
        app:layout_constraintTop_toBottomOf="@id/login_name_et"
        app:layout_constraintStart_toStartOf="@id/login_name_et"
        android:layout_marginTop="30dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/login_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        app:layout_constraintStart_toStartOf="@id/login_name_tv"
        app:layout_constraintTop_toBottomOf="@id/login_name_tv"
        android:layout_marginTop="55dp"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/login_top_icon"
        app:layout_constraintStart_toStartOf="@id/login_img"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/home"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>